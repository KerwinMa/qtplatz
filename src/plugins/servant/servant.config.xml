<ServantConfiguration name="servant" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/config.xsd">
  <!-- <ServantConfiguration name="servant"> -->
  <Module name="adbroker" type="corba::servant" filename="/ScienceLiaison/adbroker$(configuration).dll"/>
  <Module name="adcontroller" type="corba::servant" filename="/ScienceLiaison/adcontroller$(configuration).dll"/>
  <!-- <Module name="tofspectrometer" type="adcontrols::massspectrometer" filename="/ScienceLiaison/tofspectrometer$(configuration).dll"/> -->
  <!-- <Module name="infitofcontroller" type="corba::servant" reference="mcast" filename="/MSI/infitofcontroller$(configuration).dll"/> -->
  <Module name="infitofcontroller" type="corba::servant" reference="lookup" id="infitof.0000"/>
  <Module name="infitofspectrometer" type="adcontrols::massspectrometer" filename="/MSI/infitofspectrometer$(configuration).dll"/>
  <Module name="hmqcontroller" type="corba::servant" reference="lookup" id="HMSQ.0000"/>
  <Module name="hmqspectrometer" type="adcontrols::massspectrometer" filename="/HORIBA_STEC/hmqspectrometer$(configuration).dll"/>
  
  <Configuration name="root_poa">
    <!-- master broker for application -->
    <Configuration name="adbroker" type="orbLoader">
      <Component name="adbroker" module="adbroker"/>
    </Configuration>
    
    <!-- master instrument controller -->
    <Configuration name="adcontroller" type="orbLoader" ns_name="adcontroller.manager">
      <Component name="adcontroller" module="adcontroller"/>
      <Configuration name="InstrumentConfiguration">
        <Configuration name="infitofcontroller.1" id="infitof.1" type="object_ref" ns_name="infitofcontroller.session"/>
        <Configuration name="hmqcontroller.1" id="hmq.1" type="object_ref" ns_name="hmqcontroller.session"/>        
      </Configuration>
    </Configuration>
    
    <!-- spectrometer InfiTOF -->
    <Configuration name="infitofspectrometer" type="MassSpectrometer">
      <Component name="infitofspectrometer" module="infitofspectrometer"/>
    </Configuration>

    <!-- spectrometer InfiTOF (old) -->
    <Configuration name="tofspectrometer" type="MassSpectrometer">
      <Component name="tofspectrometer" module="tofspectrometer"/>
    </Configuration>

    <Configuration name="hmqspectrometer" type="MassSpectrometer">
      <Component name="hmqspectrometer" module="hmqspectrometer"/>
    </Configuration>

    <!-- loading individual instrument controllsers -->
    
    <!-- spectrometer HMSQ HORIBA STEC's tiny quadrupole spectrometer -->
    <Configuration name="hmqcontoller" type="orbLoader" ns_name="hmqcontroller.session">
      <Component name="hmqcontroller" module="hmqcontroller"/>
    </Configuration>    
    
    <!-- spectrometer FDMA InfiTOF time-of-flight spectrometer -->
    <Configuration name="infitofcontoller" type="orbLoader" ns_name="infitofcontroller.session">
      <Component name="infitofcontroller" module="infitofcontroller"/>
    </Configuration>
    
    <!-- end configuration -->
  </Configuration>
</ServantConfiguration>
